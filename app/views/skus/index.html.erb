table,th, td
{
border: 1px solid black;
text-align:center;
}
table 
{
width:100%;
}
th
{
height:50px;
}
</style>

<script>
Dropzone.options.myAwesomeDropzone = {
dictDefaultMessage: "Click or Drop images here to upload"
}
</script>
